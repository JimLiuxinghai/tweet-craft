{
  "name": "twitter-super-copy",
  "description": "Twitter 超级复制插件 - 一键复制带格式的推文内容",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
